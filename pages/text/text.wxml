<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello World\n</text>
<text>你好小程序\n</text>

<!--  2.selectable:true-->
<!-- 默认情况下text中的文本长按时不能选中 -->
<text selectable="{{true}}">Hello Rang\n</text>
<text selectable>Hello Rang\n</text>

<!-- 3.space：决定文本空格的大小 -->
<!-- ensp:半个中文字符大小 -->
<!-- emsp:一个中文字符大小 -->
<text space="ensp">Hello hhh\n</text>
<text space="emsp">Hello hhh\n</text>
<text space="nbsp">Hello hhh\n</text>
<text>Hello hhh\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text decode>5 &gt; 3</text>
