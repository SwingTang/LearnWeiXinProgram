<!-- 1.input的基本使用 -->
<input></input>

<!-- 2.value:input中的默认值 -->
<input value="呵呵呵"></input>

<!-- 3.type:决定键盘类型(文本输入键盘+加其它类型/数字/身份证) -->
<input type="number"></input>

<!-- 4.password：明文/暗文 -->
<input password/>

<!-- 5.palceholder:占位文字 -->
<input placeholder="请输入"></input>

<!-- 6.input:input绑定事件 -->
<input bindinput="handleInput"
bindblur="handleBlur"
bindfocus="handleFocus"></input>